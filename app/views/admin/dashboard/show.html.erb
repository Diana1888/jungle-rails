<div class="container mt-5">
<h1 class mb-4>Admin &raquo; Dashboard</h1>

  <div class="row">
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Products</h5>
          <p class="card-text">There are <%= @products %> products in the database.</p>
          <%= link_to "View Products", [:admin, :products], class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Categories</h5>
          <p class="card-text">There are <%= @categories %> categories in the database.</p>
        </div>
      </div>
    </div>
  </div>
</div>
